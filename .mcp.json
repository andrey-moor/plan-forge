{
  "mcpServers": {
    "plan-forge": {
      "command": "op",
      "args": ["run", "--", "/Users/andreym/Documents/plan-forge/target/release/plan-forge", "mcp", "plan-forge"],
      "env": {
        "ANTHROPIC_API_KEY": "op://Private/Anthropic/api_key",
        "PLAN_FORGE_THRESHOLD": "0.85",
        "PLAN_FORGE_MAX_ITERATIONS": "20",
        "GOOSE_MAX_TOKENS": "64000"
      }
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    },
    "kagi": {
      "command": "op",
      "args": ["run", "--", "uvx", "--python", "3.13", "kagimcp"],
      "env": {
        "KAGI_API_KEY": "op://Private/Kagi/api_key"
      }
    },
    "fetch": {
      "command": "uvx",
      "args": ["mcp-server-fetch"]
    }
  }
}
